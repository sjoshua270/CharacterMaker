<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_char_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_name"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/char_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_char_name" />

    <TextView
        android:id="@+id/title_char_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/char_name"
        android:text="@string/title_class"
        android:textSize="@dimen/title_size" />

    <LinearLayout
        android:id="@+id/class_and_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/char_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_char_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/title_char_class"
            android:layout_toEndOf="@id/title_char_class"
            android:layout_toRightOf="@id/title_char_class"
            android:text="@string/title_level"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/char_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title_char_level"
            android:layout_alignStart="@id/title_char_level"
            android:layout_below="@id/title_char_level"
            android:layout_toEndOf="@id/char_class"
            android:layout_toRightOf="@id/char_name" />
    </LinearLayout>

</RelativeLayout>